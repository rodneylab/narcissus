{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "module": "es2020",
    "lib": ["es2020", "DOM"],
    "target": "es2020",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "$configuration/*": ["src/configuration/*"],
      "$content/*": ["src/content/*"],
      "$components/*": ["src/components/*"],
      "$constants/*": ["src/constants/*"],
      "$hooks/*": ["src/hooks/*"],
      "$layouts/*": ["src/layouts/*"],
      "$pages/*": ["src/pages/*"],
      "$styles/*": ["src/styles/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
